<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.VerificationCompte"
    android:orientation="vertical"
    android:background="@color/back_ground"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    >

    <Button
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/icon_back"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Verification of Compte"
        android:textSize="30dp"
        android:textStyle="bold"
        android:fontFamily="@font/sfnsdisplay_black"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/sfnstext_regularg1"
        android:text="Please, enter your email address. You will receive a link to create a new password via email."
        />

    <EditText
        android:id="@+id/EmailInput"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/email"
        android:background="@drawable/rounded_edittext_bg"
        android:hint="Email" />
    <EditText
        android:id="@+id/CodeInput"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/person"
        android:fontFamily="@font/sfnstext_semibold"
        android:inputType="textPassword"
        android:background="@drawable/rounded_edittext_bg"
        android:hint="Verification Code" />

    <CheckBox
        android:id="@+id/show_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sfnstext_lightitalic"
        android:textStyle="bold"

        android:text="Show password" />

    <Button
        android:id="@+id/btn_send"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        style="@style/button_style"
        android:fontFamily="@font/sfnsdisplay_black"
        android:background="@drawable/button_style"
        android:text="Send" />

</LinearLayout>